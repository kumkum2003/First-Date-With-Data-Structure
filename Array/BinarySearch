#include<iostream>
using namespace std;
int main(){
    int n;
    cout<<"enter size of array:";
    cin>>n;
    int a[n];
    cout<<"enter the elements of array:";
    for(int i=0;i<n;i++){
        cin>>a[i];
    }
    int x,j;
    cout<<"enter data to be found:";
    cin>>x;
    bool k=1;
    int s=0;
    int e=n-1;
    while(s<=e){
        int mid=(s+e)/2;
        if(a[mid]==x){
            j=mid;
            k=0;
            break;
        }
        else if(x<a[mid]){
            e=mid-1;
        }
        else{
            s=mid+1;
        }
    }
    if(k==0){
        cout<<"the desired element is found at index "<<j<<endl;
    }
    else{
        cout<<"the desired element is not found in an array"<<endl;
    }
}
